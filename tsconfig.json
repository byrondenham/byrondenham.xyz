{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "jsx": "preserve",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": true,
      "noEmit": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "exclude": ["node_modules"],
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
  }